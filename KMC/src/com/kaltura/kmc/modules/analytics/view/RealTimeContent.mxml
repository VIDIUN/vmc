<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 creationComplete="init(event)" >
	<mx:Script>
		<![CDATA[
			import com.vidiun.vmc.business.JSGate;
			import com.vidiun.vmc.modules.analytics.control.StateEvent;
			import com.vidiun.vmc.modules.analytics.model.AnalyticsModelLocator;
			import com.vidiun.vmc.modules.analytics.model.reportdata.ReportData;
			import com.vidiun.vmc.modules.analytics.model.types.ScreenTypes;
			
			import mx.binding.utils.BindingUtils;


			private var _ready:Boolean = false;

			/**
			 * data model
			 * */
			[Bindable]
			private var _model:AnalyticsModelLocator = AnalyticsModelLocator.getInstance();


			/**
			 * watch model changes
			 * */
			public function init(event:Event = null):void {
				if (_ready) {
					BindingUtils.bindSetter(selectedReportChange, _model, "selectedReportData");
					var stateEvent:StateEvent = new StateEvent(StateEvent.STATE_CHANGE, ScreenTypes.REAL_TIME_CONTENT);
					stateEvent.dispatch();
				}
				else {
					_ready = true;
				}
			}


			/**
			 * set report message according to report data
			 * */
			private function selectedReportChange(report:ReportData):void {
				if (_model.currentScreenState == ScreenTypes.REAL_TIME_CONTENT) {
					JSGate.triggerJS('vmc.functions.openLiveAnalytics');
				}
			}


//			public function help():void {
//				var anchor:String = (contentViewStack.selectedChild as VidiunReportView).helpUrl;
//				dispatchEvent(new VmcHelpEvent(VmcHelpEvent.HELP, anchor));
//			}



		]]>
	</mx:Script>
</mx:HBox>
