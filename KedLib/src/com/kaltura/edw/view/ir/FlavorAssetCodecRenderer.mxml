<?xml version="1.0" encoding="utf-8"?>
<ir:FlavorAssetRendererBase xmlns="com.vidiun.vmc.modules.content.view.window.entrydetailswindowsections.renderers.*" 
							xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"  xmlns:ir="com.vidiun.edw.view.ir.*">

	<mx:Script>
		<![CDATA[
			import com.vidiun.edw.vo.FlavorAssetWithParamsVO;
			import com.vidiun.vo.VidiunFlavorAsset;

			override public function set data(value:Object):void
			{
				super.data = value;
				setCodecLabel();
			}

			private function setCodecLabel():void
			{
				var vfa:VidiunFlavorAsset = (data as FlavorAssetWithParamsVO).vidiunFlavorAssetWithParams.flavorAsset;
				codecLabel.enabled = (vfa != null);

				if (vfa && vfa.videoCodecId) {
					codecLabel.text = vfa.videoCodecId;
				}
				else {
					codecLabel.text = '';
				}
				codecLabel.toolTip = codecLabel.text;
			}

		]]>
	</mx:Script>

	<mx:Label id='codecLabel' creationComplete="setCodecLabel()" selectable="true"/>
</ir:FlavorAssetRendererBase>
