<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" verticalAlign="middle"
		 verticalScrollPolicy="off" horizontalScrollPolicy="off" paddingLeft="4">
	<mx:Script>
		<![CDATA[
			import com.vidiun.vo.FlavorVO;
			import com.vidiun.vo.VidiunFlavorParams;
			import com.vidiun.vo.VidiunLiveParams;
			
			[Bindable]
			private var txt:String = '';
			
			override public function set data(value:Object):void {
				super.data = value;
				var flv:VidiunFlavorParams = (value as FlavorVO).vFlavor;  
				if (flv is VidiunLiveParams && flv.tags && flv.tags.indexOf('ingest') != -1) {
					txt = resourceManager.getString('account', 'n_a');
				}
				else {
					txt = ((data as FlavorVO).vFlavor.audioBitrate + (data as FlavorVO).vFlavor.videoBitrate).toString();
				}
			}
		]]>
	</mx:Script>
	<mx:Label text="{txt}" toolTip="{txt}"/>
</mx:HBox>
