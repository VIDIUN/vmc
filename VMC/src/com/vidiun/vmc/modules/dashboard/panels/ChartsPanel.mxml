<?xml version="1.0" encoding="utf-8"?>
<!-- 
		Charts Panel section


-->
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" styleName="chartsBox" height="100%" 
		 xmlns:charts="com.vidiun.charts.*" 
		 xmlns:chartspanel="com.vidiun.vmc.modules.dashboard.components.panels.chartspanel.*" 
		 xmlns:panels="com.vidiun.vmc.modules.dashboard.panels.*" 
		 >
	<mx:Script>
		<![CDATA[
			import com.vidiun.analytics.GoogleAnalyticsConsts;
			import com.vidiun.analytics.GoogleAnalyticsTracker;
			import com.vidiun.analytics.VAnalyticsTracker;
			import com.vidiun.analytics.VAnalyticsTrackerConsts;
			import com.vidiun.vmc.events.VmcNavigationEvent;
			import com.vidiun.vmc.modules.dashboard.DashboardManager;
			import com.vidiun.types.VidiunStatsVmcEventType;
			
			import mx.binding.utils.BindingUtils;
			
			
			
			/**
			 *  Bind the graphs to the data
			 * 
			 */
			private function chartCreationComplete(event:Event):void
			{
				BindingUtils.bindSetter(setChartData, DashboardManager.instance, 'selectedDim');
			}
			
			/**
			 *  set the graphs data
			 * 
			 */
			private function setChartData(data:Object):void
			{
				chart.dataProvider = DashboardManager.instance.selectedDim;
			}
			
			private function loadReports():void{
				GoogleAnalyticsTracker.getInstance().sendToGA(GoogleAnalyticsConsts.DASHBOARD_VIEW_REPORTS, GoogleAnalyticsConsts.DASHBOARD);
				VAnalyticsTracker.getInstance().sendEvent(VAnalyticsTrackerConsts.DASHBOARD,VidiunStatsVmcEventType.DASHBOARD_VIEW_REPORTS, "DashBoard>View Reports")
				// show analytics module
//				DashboardManager.instance.loadVMCModule('reports');
				dispatchEvent(new VmcNavigationEvent(VmcNavigationEvent.NAVIGATE, 'analytics'));
			}
		]]>
	</mx:Script>
	<mx:Label text="{resourceManager.getString('vdashboard', 'top_content')}" id="chartsTitleLabel" styleName="chartTitleLabel"/>
	<panels:ChartDimOptionsComboBox id="OptionsComboBox" selectedItem="{}"/>
	<charts:VLineChart id='chart' width="100%" height="100%" 
					   minHAxisDate="{DashboardManager.instance.DATE_30_DAYS_AGO}" 
					   maxHAxisDate="{DashboardManager.instance.TODAY_DATE}" 
					   dataProvider="{DashboardManager.instance.selectedDim}" 
					   creationComplete="chartCreationComplete(event)"/>
	<mx:Button id='viewReportsBtn' label="{resourceManager.getString('vdashboard', 'view_reports')}" click="loadReports()" useHandCursor="true" buttonMode="true" styleName="dashboardBtn"/>
</mx:VBox>
