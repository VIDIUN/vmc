<?xml version="1.0" encoding="utf-8"?>
<!--

	 Embed Panel section



-->
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" horizontalAlign="left"
		 styleName="dashboardBox" xmlns:controls="com.vidiun.controls.*">
	<mx:Script>
		<![CDATA[
			import com.vidiun.analytics.GoogleAnalyticsConsts;
			import com.vidiun.analytics.GoogleAnalyticsTracker;
			import com.vidiun.analytics.VAnalyticsTracker;
			import com.vidiun.analytics.VAnalyticsTrackerConsts;
			import com.vidiun.vmc.events.VmcNavigationEvent;
			import com.vidiun.vmc.modules.dashboard.DashboardManager;
			import com.vidiun.types.VidiunStatsVmcEventType;
			
			import modules.Dashboard;

			/**
			 * url to open when user clicks quickstart button
			 * */
			public var quickStartURL:String;

			private function manage():void {
				GoogleAnalyticsTracker.getInstance().sendToGA(GoogleAnalyticsConsts.DASHBOARD_EMBED_PLAYER, GoogleAnalyticsConsts.DASHBOARD);
				VAnalyticsTracker.getInstance().sendEvent(VAnalyticsTrackerConsts.DASHBOARD,VidiunStatsVmcEventType.DASHBOARD_EMBED_PLAYER,
														  "DashBoard>Embed Player")
//				DashboardManager.instance.loadVMCModule('content', 'Manage');
				dispatchEvent(new VmcNavigationEvent(VmcNavigationEvent.NAVIGATE, 'content', 'manage'));
			}


			private function publish():void {
				GoogleAnalyticsTracker.getInstance().sendToGA(GoogleAnalyticsConsts.DASHBOARD_EMBED_PLAYLIST, GoogleAnalyticsConsts.DASHBOARD);
				VAnalyticsTracker.getInstance().sendEvent(VAnalyticsTrackerConsts.DASHBOARD,VidiunStatsVmcEventType.DASHBOARD_EMBED_PLAYLIST,
														  "DashBoard>Embed PlayList")
//				DashboardManager.instance.loadVMCModule('content', 'Publish');
				dispatchEvent(new VmcNavigationEvent(VmcNavigationEvent.NAVIGATE, 'content', 'playlists'));
			}
		]]>
	</mx:Script>
	<mx:HBox width="100%" horizontalAlign="left" styleName="featureTitleBox">
		<mx:Label text="{resourceManager.getString('vdashboard', 'embed_title')}" id="titleLabel" styleName="titleLabel"/>
	</mx:HBox>
	<mx:HBox width="100%" height="100%" horizontalGap="0">
		<mx:VBox height="100%" styleName="DashboardInnerBox" width="170">
			<mx:Image source="{StyleManager.getStyleDeclaration('.DashboardImageBank').getStyle('embedTitleImage')}" />
		</mx:VBox>
		<mx:VBox width="100%" height="100%" styleName="uploadInnerBox">
			<mx:HBox width="100%">
				<mx:Text id="embedOption1Label" width="95%"
						 text="{resourceManager.getString('vdashboard', 'embed_option_1_description')}"
						 styleName="featureLineLabel"/>
				<mx:Spacer width="5%"/>
				<controls:MultilineButton id="embedOption1Button"
						   label="{resourceManager.getString('vdashboard', 'embed_option_1_button')}"
						   useHandCursor="true" buttonMode="true" styleName="dashboardBtn" click="manage()"
						   width="{Dashboard.BUTTON_WIDTH_SIZE}"/>
			</mx:HBox>
			<mx:HBox width="100%">
				<mx:Text id="embedOption2Label" width="95%"
						 text="{resourceManager.getString('vdashboard', 'embed_option_2_description')}"
						 styleName="featureLineLabel"/>
				<mx:Spacer width="5%"/>
				<controls:MultilineButton id="embedOption2Button"
						   label="{resourceManager.getString('vdashboard', 'embed_option_2_button')}"
						   useHandCursor="true" buttonMode="true" styleName="dashboardBtn" click="publish()"
						   width="{Dashboard.BUTTON_WIDTH_SIZE}"/>
			</mx:HBox>
			<mx:LinkButton id='quickStartLinkButton' styleName="dashboardLinkBtn"
						   label="{resourceManager.getString('vdashboard', 'quick_start_link')}"
						   click="{DashboardManager.instance.launchExactOuterLink(quickStartURL)}"/>
		</mx:VBox>
	</mx:HBox>


</mx:VBox>
